{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@stores/*": ["src/stores/*"],
      "@custom.types/*": ["src/types/*"],
      "tailwind.config": ["tailwind.config.ts"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "src",
    "nativewind-env.d.ts",
    "**/*.ts", 
    "**/*.tsx"
  ]
}